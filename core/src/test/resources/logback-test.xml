<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/core.log</file>
        <append>false</append>
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="FILE" />
    </root>
</configuration>